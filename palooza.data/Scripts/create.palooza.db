USE palooza
GO

PRINT 'Creating Table Chip'
GO

IF EXISTS (SELECT * FROM sysobjects WHERE name = 'Chip' AND xtype = 'U')
BEGIN
	PRINT 'Table found; dropping and recreating.'
	DROP TABLE Chip
END
GO

CREATE TABLE Chip
(
	ID int NOT NULL PRIMARY KEY,
	Value int NOT NULL,
	Color varchar(32),
	TrimColor varchar(32),
	[Image] Image
)
